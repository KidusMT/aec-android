                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:paddingLeft="20dp"-->
                <!--android:text="Show Gift Cards"-->
                <!--android:textStyle="bold" />-->
        <!--</LinearLayout>-->
    </LinearLayout>

